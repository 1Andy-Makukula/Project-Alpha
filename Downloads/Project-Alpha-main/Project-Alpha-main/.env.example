# KithLy Environment Configuration
# Copy this file to .env.local for local development

# API Configuration
# For development with mock data, use 'mock'
# For Django backend, use the full API URL (e.g., 'http://localhost:8000/api' or 'https://api.kithly.com/api')
VITE_API_MODE=mock

# Django Backend URL (used when VITE_API_MODE is not 'mock')
VITE_API_BASE_URL=http://localhost:8000/api

# Authentication
VITE_AUTH_TOKEN_KEY=kithly_auth_token

# Payment Gateway (Flutterwave)
VITE_FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key_here

# Payment Mode: 'live' for real Flutterwave payments, 'simulation' for testing
VITE_PAYMENT_MODE=simulation

# WhatsApp Configuration (for Delivery Verification)
VITE_WHATSAPP_SUPPORT_NUMBER=260971234567
VITE_VERIFICATION_BASE_URL=https://kith.ly/verify

# Feature Flags
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Environment
VITE_APP_ENV=development
